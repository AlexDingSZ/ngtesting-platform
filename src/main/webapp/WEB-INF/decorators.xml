<?xml version="1.0" encoding="UTF-8"?>
<decorators defaultdir="/WEB-INF/decorators">
	
	<excludes>
		<pattern>/logon/*</pattern>
		<pattern>/app/*</pattern>
		<pattern>/index/*</pattern>
		<pattern>/*.ajax</pattern>
		<pattern>/*.html</pattern>
