.exchange {
  width: 100%;
  height: 100%;
  background-image: url(/assets/img/bg-exchange.png); }
  .exchange .avatar-grid .avatar-col .col-inner .text {
            color: white; }

  .exchange .result {
      padding-top: 20rpx; }
      .exchange .result .my-grid {
        position: relative; }
    
  .exchange .search {
    position: absolute;
    left: 0;
    bottom: 150rpx;
    width: 100%; }
    .exchange .search .tips {
      margin-bottom: 20rpx;
      width: 100%;
      text-align: center;
      font-size: 14rpx; }
      .exchange .search .tips view {
        color: white;
      }
    .exchange .search .pointerAnim {
      will-change: transform;
      -webkit-transform-origin: 50% 100%;
      transform-origin: 50% 100%;
      border-radius: 50% 50% 0 0 / 100% 100% 0 0;
      background-image: -webkit-linear-gradient(315deg, rgba(255, 255, 255, 0.8) 0%, rgba(0, 0, 0, 0.02) 70%, transparent 100%);
      background-image: linear-gradient(135deg, rgba(255, 255, 255, 0.8) 0%, rgba(0, 0, 0, 0.02) 70%, transparent 100%);
      -webkit-animation: rotate360 3s infinite linear;
      animation: rotate360 3s infinite linear; }
    .exchange .search .pointer {
      position: absolute;
      left: 0%;
      right: 0%;
      top: 0%;
      bottom: 50%; }
      .exchange .search .pointer:after {
        content: "";
        position: absolute;
        left: 0;
        width: 50%;
        bottom: -1rpx;
        border-top: 2rpx solid rgba(255, 255, 255, 0.8);
        box-shadow: 0 0 3rpx rgba(255, 255, 255, 0.6);
        border-radius: 9rpx;
        -webkit-animation: extend 1s linear;
        animation: extend 1s linear; }
    .exchange .search .border0, .exchange .search .border1, .exchange .search .border2, .exchange .search .border3 {
      border: 1rpx solid rgba(255, 255, 255, 0.3);
      border-radius: 50%; }
    .exchange .search .border1 {
      position: relative;
      width: 300rpx;
      height: 300rpx;
      margin: 0 auto; }
      .exchange .search .border1 .border2 {
        width: 200rpx;
        height: 200rpx;
        margin: 47rpx; }
        .exchange .search .border1 .border2 .border3 {
          width: 100rpx;
          height: 100rpx;
          margin: 47rpx; }
          .exchange .search .border1 .border2 .border3 .radar {
            position: relative;
            width: 100rpx;
            height: 100rpx;
            background-color: transparent;
            border-radius: 50%; }
            .exchange .search .border1 .border2 .border3 .radar .avatar {
              display: inline-block;
              width: 100%;
              height: 100%;
              border: 1rpx solid #fff;
              border-radius: 50%;
              overflow: hidden;
              box-shadow: 0px 0px 10px 2px rgba(255, 255, 255, 0.7); }
              .exchange .search .border1 .border2 .border3 .radar .avatar image {
                height: 100%;
                width: 100%;
                border-radius: 100%;
              }

@-webkit-keyframes rotate360 {
  0% {
    -webkit-transform: rotate(0deg);
    transform: rotate(0deg); }
  to {
    -webkit-transform: rotate(-360deg);
    transform: rotate(-360deg); } }
@keyframes rotate360 {
  0% {
    -webkit-transform: rotate(0deg);
    transform: rotate(0deg); }
  to {
    -webkit-transform: rotate(-360deg);
    transform: rotate(-360deg); } }